HIVE CREATING QUERIES FOR TABLE 

1. 
CREATE TABLE USA_HOUSING_STATS_TXT (Avg_Area_Income DOUBLE, Avg_Area_House_Age DOUBLE,Avg_Area_Number_of_Rooms DOUBLE, Avg_Area_Number_of_Bedrooms DOUBLE,Area_Population DOUBLE, Price DOUBLE )
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;

CREATE TABLE USA_HOUSING_STATS_SEQ (Avg_Area_Income DOUBLE, Avg_Area_House_Age DOUBLE,Avg_Area_Number_of_Rooms DOUBLE, Avg_Area_Number_of_Bedrooms DOUBLE,Area_Population DOUBLE, Price DOUBLE )
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n'
STORED AS sequencefile;

CREATE TABLE USA_HOUSING_STATS_RC (Avg_Area_Income DOUBLE, Avg_Area_House_Age DOUBLE,Avg_Area_Number_of_Rooms DOUBLE, Avg_Area_Number_of_Bedrooms DOUBLE,Area_Population DOUBLE, Price DOUBLE )
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n'
stored as rcfile;

CREATE TABLE USA_HOUSING_STATS_AVRO (Avg_Area_Income DOUBLE, Avg_Area_House_Age DOUBLE,Avg_Area_Number_of_Rooms DOUBLE, Avg_Area_Number_of_Bedrooms DOUBLE,Area_Population DOUBLE, Price DOUBLE )
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n'
stored as avro;

CREATE TABLE USA_HOUSING_STATS_ORC (Avg_Area_Income DOUBLE, Avg_Area_House_Age DOUBLE,Avg_Area_Number_of_Rooms DOUBLE, Avg_Area_Number_of_Bedrooms DOUBLE,Area_Population DOUBLE, Price DOUBLE )
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n'
stored as orc;

CREATE TABLE USA_HOUSING_STATS_PARQUET (Avg_Area_Income DOUBLE, Avg_Area_House_Age DOUBLE,Avg_Area_Number_of_Rooms DOUBLE, Avg_Area_Number_of_Bedrooms DOUBLE,Area_Population DOUBLE, Price DOUBLE )
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n'
stored as parquet;

CREATE TABLE DUMMY(NAME DOUBLE);

